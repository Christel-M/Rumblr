<div class="main-container center">
  <div class="container">
    <div class="animate-down">
      <h1>Write Post</h1>
      <form class="create-account" action="/articles/create-article" method="POST">
        <input type="text" name="title" value="" placeholder="Title Name" required>
        <textarea name="content" rows="30" cols="20" placeholder="Write your blog here..."></textarea>
        <input type="text" name="image" value="" placeholder="Paste your image URL here..." required> <br>
        <input type="submit" name="submit" value="Create Post">
      </form>
    </div>
  </div>
</div>
