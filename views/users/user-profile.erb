<div class="main-container">
  <div class="sub-container">
    <div class="sideimg">
      <img src="https://images.unsplash.com/photo-1517527181905-db18299d4d52?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80">
    </div>
    <div class="center">
      <h1>Account</h1>
      <p><strong>Full Name: </strong><%=@user.lastname%>, <%=@user.firstname%></p>
      <p><strong>Email: </strong><%=@user.email%></p>
      <p><strong>DOB: </strong><%=@user.dob%></p>
      <a class="secondary-btn" href="/users/<%=@user.id%>">Edit Profile</a> <br>
      <br>
      <form action="/logout" method="POST">
        <input type="submit" name="logout" value="Logout">
      </form> <br>
      <form action="/users/<%=@user.id%>" method="post">
        <input class="primary-btn" type="submit" name="delete" value="Delete Account" onclick="alert('Account Deleted.. Sorry to see you go..')">
      </form>
    </div>
    <div class="sideimg">
      <img src="https://images.unsplash.com/photo-1469938880222-00039554fd87?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80">
    </div>
  </div>
</div>
